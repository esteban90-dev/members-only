<h1>All Posts</h1>

<% @posts.each do |post| %>
  <p><%= post.body %></p>

  <% if member_signed_in? %>
    <%= post.member.name %>
  <% end %>

  <% if current_member == post.member %>
    <%= link_to "edit", edit_post_path(post) %>
    <%= link_to "delete", post_path(post), method: :delete %>
  <% end %>

  <br><br>

<% end %>

<br><br>

<% if member_signed_in? %>
  <%= link_to "Create a new post", new_post_path %>
<% end %>